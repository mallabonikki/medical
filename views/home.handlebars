{{!--tab view--}}
<div class="container">
	<div class="row">
        <div class="span12">
    		<div class="" id="loginModal">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                <h3>Login | Create Account</h3>
              </div>
              <div class="modal-body">
                <div class="well">
                  <ul class="nav nav-tabs">
                    <li class="active"><a href="#login" data-toggle="tab">Login</a></li>
                    <li><a href="#create" data-toggle="tab">Create Account</a></li>
                  </ul>
                    {{#if errorMessage}}
                    <div class="alert alert-danger">
                      {{errorMessage}}
                    </div>
                    {{/if}}
                  <div id="myTabContent" class="tab-content">
                    <div class="tab-pane active in" id="login">
                      <form class="form-horizontal" action="/login" method="POST"> 
                        <fieldset>
                          <div id="legend">
                            <legend class="">Login</legend>
                          </div>    
                          <div class="control-group">
                            <!-- Username -->
                            <label class="control-label"  for="username">Username</label>
                            <div class="controls">
                              <input type="text" id="username" name="username" placeholder="Username" class="input-xlarge">
                            </div>
                          </div>
     
                          <div class="control-group">
                            <!-- Password-->
                            <label class="control-label" for="password">Password</label>
                            <div class="controls">
                              <input type="password" id="password" name="password" placeholder="Password" class="input-xlarge">
                            </div>
                          </div>
                          <div class="control-group">
                            <!-- Button -->
                            <div class="controls">
                              <button class="btn btn-success" type="submit" >Login</button>
                            </div>
                          </div>
                        </fieldset>
                      </form>                
                    </div>
                    <div class="tab-pane fade" id="create">
                      <form id="tab" method="POST" action="/signup">


                        <label>Username</label>
                        <input name="username" type="text" value="" class="input-xlarge" id="inputUsername" placeholder="Username" required autofocus>
                        <label>First Name</label>
                        <input name="firstname" type="text" value="" class="input-xlarge" id="inputFirstname" placeholder="Firstname">
                        <label>Last Name</label>
                        <input name="lastname" type="text" value="" class="input-xlarge" id="inputLastname" placeholder="Lastname">
                        <label>Email</label>
                        <input name="email" type="text" value="" class="input-xlarge" id="inputEmail" placeholder="Email">
                        <label>Address</label>
                        <textarea name="address" value="Smith" rows="3" class="input-xlarge" id="inputAddress" placeholder="Address" ></textarea>
                        <label>Password</label>
                        <input name="password" type="password" value="" class="input-xlarge" id="inputPassword" placeholder="Password">
                        <label>Repeat Password</label>
                        <input name="password2" type="password" value="" class="input-xlarge" id="inputPassword2" placeholder="Repeat Password">
                        <div>
                          <button type="submit" class="btn btn-primary">Create Account</button>
                        </div>
                      </form>
                    </div>
                </div>
              </div>
            </div>
        </div>
	</div>
</div>